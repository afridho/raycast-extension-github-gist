{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github-gist",
  "title": "GitHub Gist",
  "description": "Create, search and display GitHub gists.",
  "icon": "github.png",
  "author": "koinzhang",
  "owner": "ridho-package4",
  "contributors": [
    "Aayush9029",
    "LunaticMuch",
    "pernielsentikaer",
    "stelo",
    "nbbaier",
    "ridemountainpig",
    "afridho11"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-gists",
      "title": "Search Gists",
      "subtitle": "GitHub",
      "description": "Search and display GitHub gists.",
      "mode": "view",
      "preferences": [
        {
          "name": "perPage",
          "type": "dropdown",
          "description": "Number of gist loaded per page.",
          "required": false,
          "title": "Per Page",
          "default": "100",
          "data": [
            {
              "title": "30",
              "value": "30"
            },
            {
              "title": "50",
              "value": "50"
            },
            {
              "title": "80",
              "value": "80"
            },
            {
              "title": "100",
              "value": "100"
            }
          ]
        },
        {
          "name": "remember-tag",
          "type": "checkbox",
          "required": false,
          "title": "Preferences",
          "label": "Remember Filter Tag",
          "description": "Remember gist filter tag.",
          "default": false
        },
        {
          "name": "defaultGistTag",
          "type": "dropdown",
          "description": "Default filter tag for the gist item. If \"Remember Filter Tag\" is enabled, this will be ignored.",
          "required": false,
          "title": "Default Filter Tag",
          "default": "My Gists",
          "data": [
            {
              "title": "My Gists",
              "value": "My Gists"
            },
            {
              "title": "Starred Gists",
              "value": "Starred Gists"
            }
          ]
        },
        {
          "name": "primaryAction",
          "type": "dropdown",
          "description": "Primary action for gist item.",
          "required": false,
          "title": "Primary Action",
          "default": "paste",
          "data": [
            {
              "title": "Paste to Active App",
              "value": "paste"
            },
            {
              "title": "Copy to Clipboard",
              "value": "copy"
            }
          ]
        }
      ]
    },
    {
      "name": "create-gist",
      "title": "Create Gist",
      "subtitle": "GitHub",
      "description": "Create GitHub gist from selection or clipboard.",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@octokit/core": "^6.1.0",
    "@raycast/api": "^1.93.2",
    "@raycast/utils": "^1.19.1",
    "js-base64": "^3.7.2"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.14.9",
    "@types/node-fetch": "^2.6.11",
    "@types/react": "18.3.3",
    "eslint": "^9.21.0",
    "prettier": "^3.5.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
